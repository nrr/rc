#! /usr/bin/env bash

DEVICE="Wacom Bamboo 16FG 6x8 (WL) Finger touch"
xsetwacom set "$DEVICE" Rotate half
xsetwacom set "$DEVICE" Touch on
xsetwacom set "$DEVICE" Gesture on

DEVICE="Wacom Bamboo 16FG 6x8 (WL) Finger pad"
xsetwacom set "$DEVICE" Rotate half

DEVICE="Wacom Bamboo 16FG 6x8 (WL) Pen stylus"
xsetwacom set "$DEVICE" Rotate half
