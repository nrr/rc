#!/bin/bash

set -e

run() {
  echo "\$ $*"
  $*
}

PR_ID=$1

if [ -z "$PR_ID" ]; then
  echo "Usage: $(basename $0) <pull request id>"
  exit 2
fi

if [[ "$PR_ID" =~ github.com ]]; then
  PR_ID=$(echo "$PR_ID" | sed 's#.\+/pull/\([0-9]\+\).*#\1#')
fi

run git-fetch origin "pull/${PR_ID}/head:pr-${PR_ID}"
run git-checkout "pr-${PR_ID}"
