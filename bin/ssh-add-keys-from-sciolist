#! /usr/bin/env bash

set -u
set -o pipefail
set -x

for key in $(find -L ~/.ssh/keys '(' -type f -o -type l ')' -iname 'id_rsa') ~/.ssh/id_rsa
do
	askpass_script=$(mktemp /tmp/askpass.XXXXXX)
	chmod +x "$askpass_script"
	cat <<EOF >"$askpass_script"
#! /usr/bin/env bash
s6t-ssh-askpass "$key"
EOF

	env DISPLAY= SSH_ASKPASS="$askpass_script" ssh-add $key </dev/null

	rm "$askpass_script"
done
