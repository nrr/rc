startup_message off

# use global cursor positioning (not per-frame)
warp off

# move cursor out of the way when task switching
addhook key banish

set bgcolor black
set fgcolor grey95
set bargravity nw
set barpadding 4 4
msgwait 3

set winname title
set winfmt %n %s %t
set winliststyle column
set wingravity center
set border 0

definekey top C-space exec
bind semicolon colon
bind colon exec

# Atlanta, GA 30303
exec redshift -l 33.755711,-84.388372

# St. Louis, MO 63101
# exec redshift -l 38.6305,-90.1928

# Berlin (Charlottenburg)
# exec redshift -l 52.5167,13.3000

exec xsetroot -solid navy -cursor_name left_ptr
exec bash -c 'exec $HOME/bin/add-ssh-keys'
exec bash -c 'exec $HOME/bin/keyboard'
exec bash -c 'exec $HOME/bin/mouse'
exec bash -c 'exec $HOME/bin/tablet_wacom_ptk-440'
exec pixelclock 23:00 05:30
