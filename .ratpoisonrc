startup_message off

# use global cursor positioning (not per-frame)
warp off

# move cursor out of the way when task switching
addhook key banish

set bgcolor black
set fgcolor grey95
set bargravity nw
set barpadding 4 4
msgwait 3

set winname title
set winfmt %n %s %t
set winliststyle column
set wingravity center
set border 0

alias date exec ratpoison -c "echo $(date)"

definekey top C-space exec
definekey top XF86AudioRaiseVolume exec bash -c 'exec $HOME/bin/v+'
definekey top XF86AudioMute exec bash -c 'exec $HOME/bin/mute'
definekey top XF86AudioLowerVolume exec bash -c 'exec $HOME/bin/v-'
# TODO(nrr): Chunk this into a shell script like the others.
definekey top XF86AudioMicMute exec pactl set-source-mute 1 toggle
definekey top XF86ScreenSaver exec xscreensaver-command -lock
# TODO(nrr): Figure out how these should work. Would be neat.
# definekey top XF86Sleep exec ...
# definekey top XF86Display exec ...
# definekey top XF86WebCam exec ...
# definekey top XF86AudioPlay exec ...
# definekey top XF86AudioPlay exec ...
# definekey top XF86AudioNext exec ...
bind semicolon colon
bind colon exec
bind x exec xscreensaver-command -lock

# Atlanta, GA 30303
exec redshift -l 33.755711,-84.388372

# St. Louis, MO 63101
# exec redshift -l 38.6305,-90.1928

# Berlin (Charlottenburg)
# exec redshift -l 52.5167,13.3000

exec wmname LG3D
exec xscreensaver -no-splash
exec xsetroot -solid navy -cursor_name left_ptr
exec bash -c 'exec $HOME/bin/add-ssh-keys'
exec bash -c 'exec $HOME/bin/keyboard'
exec bash -c 'exec $HOME/bin/mouse'
exec bash -c 'exec $HOME/bin/touchpad'
exec bash -c 'exec $HOME/bin/tablet_wacom_ptk-440'
exec pixelclock 23:00 05:30
