! xterm
.xterm*background:		gray10
.xterm*cursorColor:		green
.xterm*foreground:		white
.xterm*borderColor:		green
.xterm*colorBD:			black
.xterm*colorBDMode:		false
.xterm*saveLines:      65535
.xterm*scrollBar:		true
.xterm*scrollbar*width:		8

.xterm*selectToClipboard:	true
.xterm*utmpInhibit:		true
! hide when i type
.xterm*pointerMode:		1

.xterm*allowSendEvents:		false
.xterm*dynamicColors:		true
.xterm*allowColorOps:		true
.xterm*eightBitInput:   false
.xterm*eightBitOutput:  true

.xterm*title:			xterm
.xterm*termName:		xterm-256color

.xterm*visualBell:		false
.xterm*cursorBlink:		true

.xterm*Scrollbar.foreground:	gray10
.xterm*Scrollbar.background:	gray90
.xterm*Scrollbar.minimumThumb:	20

.xterm*Geometry: 132x48

! vncviewer scroll bars
*viewport.horizontal.height:	10
*viewport.vertical.width:	10
