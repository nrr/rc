unset allow_8bit
unset allow_cursor

set realname="Nathaniel Reindl"
unmy_hdr *

set record = +sent-`date +%Y%m`
set sort = threads
set mbox_type = Maildir
set mbox = ~/Mail/read-`date +%Y%m`
set editor = "vim"
set envelope_from = yes
set edit_headers = yes
toggle help
toggle arrow_cursor
toggle menu_scroll

ignore *
unignore date from to cc x-mailer subject

my_hdr From: Nathaniel Reindl <nrr@corvidae.org>
alternates (nrr@corvidae.org|fiction@sdf.lonestar.org)

send-hook . 'my_hdr From: Nathaniel Reindl <nrr@corvidae.org>'
send-hook . 'set signature=~/.signature'

color hdrdefault brightwhite black
color indicator brightwhite blue
color markers blue black
color message white black
color quoted brightwhite black
color search brightwhite blue
color signature white blue 
color status brightwhite magenta
color tree brightblue black
color search black magenta
color error brightblue black
color body brightmagenta black "(http|ftp|telnet|finger|rsync)://[^ \">\t\r\n]*"
color body brightmagenta black "mailto:[-a-z_0-9.]+@[-a-z_0-9.]+"
color index brightwhite black "~T"
color index blue black "~D"

color header brightblue black ^(From|Subject):
